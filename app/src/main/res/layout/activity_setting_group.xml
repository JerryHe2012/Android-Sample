<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hpark4435.a01.SettingGroup">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/holo_blue_bright"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/txt_Account"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Account"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/txt_askNumber"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_Account"
            android:layout_centerHorizontal="true"
            android:text="How many number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.237"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <DatePicker
            android:id="@+id/datePicker2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/timePicker"
            android:layout_marginTop="30dp" />

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_above="@+id/btn_GoFirstPage"
            android:layout_alignEnd="@+id/txt_askNumber"
            android:layout_alignStart="@+id/txt_askNumber"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="309dp" />

        <Button
            android:id="@+id/btn_GoFirstPage"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_ToThirdPage"
            android:layout_alignStart="@+id/txt_askNumber"
            android:text="GoBack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_ToThirdPage"
            app:layout_constraintHorizontal_bias="0.451"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_askNumber"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/btn_ToThirdPage"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txt_askNumber"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:text="NEXT"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_askNumber"
            app:layout_constraintVertical_bias="1.0" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
